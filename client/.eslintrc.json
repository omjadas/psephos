{
  "root": true,
  "extends": [
    "../.eslintrc.json",
    "plugin:react/recommended",
    "react-app",
    "react-app/jest"
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "graphql"
  ],
  "rules": {
    "graphql/template-strings": [
      "error",
      {
        "env": "apollo",
        "validators": "all"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
